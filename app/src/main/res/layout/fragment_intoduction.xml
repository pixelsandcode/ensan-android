<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.app.ensan.component.fragment.IntroductionFragment"
    >
  <ir.app.ensan.component.view.CustomTextView
      android:id="@+id/splash_main_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:text="@string/app_name"
      android:layout_marginTop="8dp"
      android:textColor="@color/black"
      android:textSize="32sp"
      app:font_type="bold"
      />

  <ir.app.ensan.component.view.CustomTextView
      android:id="@+id/splash_sub_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:text="@string/app_description"
      android:textColor="@color/black"
      android:layout_marginTop="8dp"
      android:layout_below="@+id/splash_main_title"
      android:textSize="22sp"
      />
</RelativeLayout>

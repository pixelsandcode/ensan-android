<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/add_third_guardian"
    tools:context="ir.app.ensan.component.fragment.UserStatusFragment"
    >

  <ImageView
      android:id="@+id/user_status_image_view"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:src="@drawable/good"
      android:layout_centerInParent="true"
      />

  <ir.app.ensan.component.view.CustomTextView
      android:id="@+id/user_status_text_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/user_status_safe"
      android:layout_centerHorizontal="true"
      android:layout_below="@+id/user_status_image_view"
      android:layout_marginTop="16dp"
      android:textSize="18sp"
      app:font_type="bold"
      />

  <ir.app.ensan.component.view.CustomTextView
      android:id="@+id/notified_count_text_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/notified_safe_status_count"
      android:layout_centerHorizontal="true"
      android:layout_below="@+id/user_status_text_view"
      android:layout_marginTop="16dp"
      android:textSize="16sp"
      />

</RelativeLayout>

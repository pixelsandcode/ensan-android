<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="ir.app.ensan.component.activity.SplashActivity"
    >

  <ir.app.ensan.component.view.CustomTextView
      android:id="@+id/splash_main_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:text="@string/app_name"
      android:layout_marginTop="8dp"
      android:textColor="@color/black"
      android:layout_above="@+id/splash_sub_title"
      android:textSize="32sp"
      app:font_type="bold"
      />

  <ir.app.ensan.component.view.CustomTextView
      android:id="@+id/splash_sub_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:text="@string/app_description"
      android:textColor="@color/black"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="64dp"
      android:layout_above="@+id/home_image_view"
      android:textSize="22sp"
      />

  <ImageView
      android:id="@+id/home_image_view"
      android:layout_width="match_parent"
      android:layout_height="330dp"
      android:layout_alignParentBottom="true"
      android:scaleType="fitXY"
      android:src="@drawable/home_splash"/>

</RelativeLayout>
